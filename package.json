{
	"name": "quiz_app",
	"private": true,
	"version": "0.0.0",
	"description": "quiz app repository",
	"author": "chan9yu <wry5533@gmail.com>",
	"type": "module",
	"homepage": "https://chan9yu.github.io/quiz_app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/chan9yu/quiz_app"
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"commit": "npx git-cz",
		"prepare": "husky install",
		"prepare:permission": "chmod +x .husky/*",
		"deploy": "gh-pages -d dist -t true"
	},
	"dependencies": {
		"axios": "^1.6.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.2.0",
		"@commitlint/config-conventional": "^18.1.0",
		"@types/react": "^18.2.15",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.9.1",
		"@typescript-eslint/parser": "^6.9.1",
		"@vitejs/plugin-react": "^4.1.0",
		"commitizen": "^4.3.0",
		"eslint": "^8.52.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.4",
		"gh-pages": "^6.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5"
	}
}
